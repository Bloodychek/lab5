@model lab5.ViewModels.GsmViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container text-center align-middle w-50">
    <form method="post">
        <div>
            <input hidden asp-for="PageViewModel.PageNumber" value="@Model.PageViewModel.PageNumber" />
            <input hidden asp-for="Gsm.GSmid" value="@Model.Gsm.GSmid" />
        </div>

        <h2>Edit entity</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger text-justify w-100 m-lg-0"></div>

        <p>
            <label asp-for="Gsm.TypeOfGsm"></label><br />
            <input asp-for="Gsm.TypeOfGsm" class="w-75" />
        <p><span asp-validation-for="Gsm.TypeOfGsm" class="text-danger"></span></p>

        <p>
            <label asp-for="Gsm.TTkofType"></label><br />
            <input asp-for="Gsm.TTkofType" class="w-75" />
        <p><span asp-validation-for="Gsm.TTkofType" class="text-danger"></span></p>

        <p>
            <input type="submit" value="Save" class="btn btn-success w-75" />
        <p><a asp-action="Index" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-danger w-75">Back</a></p>
    </form>
</div>